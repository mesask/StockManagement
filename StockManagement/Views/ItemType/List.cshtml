@model List<StockManagement.Models.ViewModels.ItemTypeListModel>

<div class="bg-secondary bg-opacity-10">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center p-2">
            <div>
                <h4 class="m-0">ItemType List</h4>
            </div>
            <div>
                <a 
                    asp-area=""
                    asp-controller="ItemType"
                    asp-action="Add"
                    class="btn btn-primary">Add</a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Image</th>
            <th>Note</th>
            <th width="150"></th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var itemType in Model)
            {
                <tr>
                    <td>@itemType.Id</td>
                    <td>@itemType.Name</td>
                    <td>@itemType.Image</td>
                    <td>@itemType.Note</td>
                    <td class="text-center">
                        <a class="btn btn-primary"
                           asp-area=""
                           asp-controller="ItemType"
                           asp-action="Edit"
                           asp-route-id="@itemType.Id"
                           >Edit</a>
                        <a class="btn btn-danger"
                           asp-area=""
                           asp-controller="ItemType"
                           asp-action="Delete"
                           asp-route-id="@itemType.Id"
                           >Delete</a>
                    </td>
                </tr>
            }
        }else
        {
            
        }
        

        </tbody>
    </table>
</div>