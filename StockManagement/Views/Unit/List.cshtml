@model List<StockManagement.Models.ViewModels.UnitListModel>

<div class="bg-secondary bg-opacity-10">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center p-2">
            <div>
                <h4 class="m-0">UnitType List</h4>
            </div>
            <div>
                <a 
                    asp-area=""
                    asp-controller="Unit"
                    asp-action="Add"
                    class="btn btn-primary">Add</a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Note</th>
            <th width="150"></th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var unit in Model)
            {
                <tr>
                    <td>@unit.Id</td>
                    <td>@unit.Name</td>
                    <td>@unit.Note</td>
                    @* <td>@unit.Description</td> *@
                    <td class="text-center">
                        <a class="btn btn-primary"
                           asp-area=""
                           asp-controller="Unit"
                           asp-action="Edit"
                           asp-route-id="@unit.Id"
                        >Edit</a>
                        <a class="btn btn-danger"
                           asp-area=""
                           asp-controller="Unit"
                           asp-action="Delete"
                           asp-route-id="@unit.Id"
                        >Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No units found.</td>
            </tr>
        }
        </tbody>
    </table>
</div>